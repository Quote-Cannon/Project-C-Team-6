@model IEnumerable<PlantWebsite.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>De kas</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="style-jasper.css">
    <link rel="shortcut icon" type="image/jpg" href=”OIP.jpg” />
</head>

<header class="start-header">
    <div class="slider">
        <div class="slider2">
            <div class="slider-text">
                <h1>Products</h1>
                <p>... product(s) found</p>
            </div>
        </div>
    </div>
    
</header>
<body>
    <div class="body-row">
        <div class="filter-row">
            <br />
            @*<div>
                <a class="btn btn-primary" asp-action="Create">Add a product</a>
            </div>*@
            <p>

            </p>
            <div>
                <form asp-controller="Products" asp-action="Index" method="get">
                    <p>
                        Search: <input type="text" name="SearchString" />
                        <input type="submit" value="Search" />
                    </p>

                </form>
            </div>

            <h2>Filter</h2>
            <div class="post">
                <input type="radio" id="post" name="post" value="post" checked="checked">
                <p>Delivered by post</p>
            </div>
            <div class="meetup">
                <input type="radio" id="meetup" name="post" value="meetup">
                <p>Meetup in person</p>
            </div>
            <hr>
            <div class="trade">
                <input type="radio" id="trade" name="trade" value="trade" checked="checked">
                <p>Trading</p>
            </div>
            <div class="notrade">
                <input type="radio" id="notrade" name="trade" value="nodtrade">
                <p>No trading</p>
            </div>
            <div class="select-boxes">
                <div class="productsselect">
                    <form>
                        <select name="product" required="required">
                            <option value="" disabled selected hidden>Products</option>
                            <option value="seed">Seed</option>
                            <option value="cutting">Cutting</option>
                            <option value="bud">Bud</option>
                        </select>
                    </form>
                </div>
                <div class="typeselect">
                    <form>
                        <select name="type" required="required">
                            <option value="" disabled selected hidden>Type</option>
                            <option value="herb">Herb</option>
                            <option value="cutting">Cutting</option>
                            <option value="creeper">Creeper</option>
                            <option value="shrub">Shrub</option>
                            <option value="climber">Climber</option>
                        </select>
                    </form>
                </div>
                <div class="lightselect">
                    <form>
                        <select name="light" required="required">
                            <option value="" disabled selected hidden>Light</option>
                            <option value="low">Low</option>
                            <option value="mid">Mid</option>
                            <option value="high">High</option>
                        </select>
                    </form>
                </div>
                <div class="waterselect">
                    <form>
                        <select name="water" required="required">
                            <option value="" disabled selected hidden>Water</option>
                            <option value="low">Low</option>
                            <option value="mid">Mid</option>
                            <option value="high">High</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="pro-page products-row">
            <div>
                <a class="btn btn-primary" asp-action="Create">Add a product</a>
                <br />
            </div>
            <p>

            </p>
            @foreach (var item in Model)
            {
                <div class="product">
                    <img src="./Images/OIP.jpg">
                    <a href="Products/Details/@item.Id">@item.Name <i>@item.LatinName</i></a>

                    <p></p>
                    @*@Html.DisplayFor(modelItem => item.Picture)*@
                </div>
                @*@Html.DisplayFor(modelItem => item.Kind)
            @Html.DisplayFor(modelItem => item.Type)
            @Html.DisplayFor(modelItem => item.Trade)*@

                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            }
        </div>
    </div>
</body>
</html>