@model PlantWebsite.Models.User

@{
    ViewData["Title"] = "MyProfile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>De kas</title>
    <link rel="stylesheet" href="./CSS/style.css">
    <link rel="stylesheet" href="./CSS/keremstyle.css">
    <link rel="shortcut icon" type="image/jpg" href=”./Images/OIP.jpg” />
</head>

<body>

    <div class="pdiv">
        <div class="editdiv">
            <a class="edit" asp-action="Edit" asp-route-id="@Model.Id">Edit Account</a> 
        </div>
        <div class="pfpdiv">
            <img class="pfp" src="http://img4.wikia.nocookie.net/__cb20140328190757/pokemon/images/thumb/2/21/001Bulbasaur.png/100px-001Bulbasaur.png" alt="">
        </div>
    </div>

    <p class="hiprofile">Hi, @Html.DisplayFor(model => model.FullName)!</p>

    <div class="profilebuttons">
        <div class="but">
            <a href="AddProduct.html" class="pfbutton" id="add"><img class="butid" src="./Images/Layer 2.png" alt=""></a>

            <p class="butext" id="add">Add product</p>
        </div>

        <div class="but">
            <a href="ProfileProducts.html" class="pfbutton" id="myprods"><img class="butid" src="./Images/Layer 3.png" alt=""></a>

            <p class="butext" id="myprods">Your products</p>
        </div>

        <div class="but">
            <a href="chat.html" class="pfbutton" id="viewchat"><img class="butid" src="./images/Layer 4.png" alt=""></a>

            <p class="butext" id="viewchat">Your chat</p>
        </div>
    </div>
</body>

