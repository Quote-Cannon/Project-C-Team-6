@page "{rid}"
@model CreateBanModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Banning User";
}
<div class="body-row2">
    <form id="account" method="post" style="
    width: 30rem;
    height: 10rem;
    position: absolute;
    top:0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    text-align: center;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input style="width:50rem;height:50rem" type="hidden" asp-for="Input.BannedId" value="@ViewData["banningemail"].ToString()" />
        <div class="form-group">
            <label asp-for="Input.BanReason">Banning reason</label>
            <input asp-for="Input.BanReason" class="form-control" />
            <span asp-validation-for="Input.BanReason" class="text-danger"></span>
        </div>

        <button type="submit"  id="blauwnaargroen" class="btn btn-primary" >Confirm ban</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
