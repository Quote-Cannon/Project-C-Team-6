@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="col-md-10 offset-md-1">
    <section>
        <div class="ddd">
            <div class="dkdiv">
                <span class="dktext">De Kas</span>
                <img class="dk" src="~/images/De_Kas.jpg" alt="">
            </div>
        </div>
        <h2>Login</h2>
        <form class="loggingin" id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block" id="cr">Log in</button>
                <a href="" class="forgotpass">Click here if you forgot your password.</a>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
