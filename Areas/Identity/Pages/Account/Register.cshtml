@page
@model RegisterModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Register";
}
<body>
    <div class="body-row2">
        <div id="r">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>


                <div class="regpfpdiv">
                    <img class="regpfp" src="~/images/pfp.jpg" alt="">
                </div>
                <div class="form-group">
                                <label class="upl" for=pp>@localizer["upload"] </label>
                                <input id="pp" type="file" asp-for="Input.ProfilePicture" />
                            </div>

                <div class="form-group">
                    <label class="reglabel" asp-for="Input.Nickname">@localizer["accname"]</label>
                    <input type="text" class="editacc" asp-for="Input.Nickname" />
                    <span asp-validation-for="Input.Nickname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="reglabel" asp-for="Input.Email">@localizer["email"]</label>
                    <input class="editacc" asp-for="Input.Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="reglabel" id="phc" asp-for="Input.PhoneNumber">@localizer["phonenr"]</label>
                            <input class="phc" id="ph" asp-for="Input.PhoneNumber" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="reglabel" id="phc" asp-for="Input.PostCode">@localizer["postcode"]</label>
                            <input class="phc" id="pc" asp-for="Input.PostCode" />
                            <span asp-validation-for="Input.PostCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>



                <div class="form-group">
                    <label class="reglabel" asp-for="Input.Password">@localizer["password"]</label>
                    <input class="editacc" asp-for="Input.Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="reglabel" asp-for="Input.ConfirmPassword">@localizer["confirmpassword"]</label>
                    <input class="editacc" asp-for="Input.ConfirmPassword" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="login" id="login">@localizer["createacc"]</button>

            </form>
        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
