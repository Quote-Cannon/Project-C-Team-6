@model AuthSystem.Models.Report

@{
    ViewData["Title"] = "Report Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Report Details</h1>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Report ID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            Reported User:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReportedUserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reporter):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reporter)
        </dd>
        <dt class="col-sm-2">
            Reported item ID:
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ReportedItemId">Go to reported item</a>
            
        </dd>
    </dl>
</div>
<div>
    @*@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    *@
    <form method="get" asp-area="Identity" asp-page="/Account/CreateBan" asp-route-rid="@Model.ReportedUserId">
        <div asp-validation-summary="ModelOnly" method="post" class="create-form"></div>
        <div class="form-group">
            <input type="submit"  class="btn btn-primary" value="Ban user"/>
        </div>
    </form>
    <a asp-action="Index">Back to reports</a>
</div>
