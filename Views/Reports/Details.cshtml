@model AuthSystem.Models.Report
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Report Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@localizer["detail"]</h1>

<div>
    <h4>@localizer["report"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Report ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @localizer["user"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReportedUserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reporter):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reporter)
        </dd>
        <dt class="col-sm-2">
            @localizer["itemID"]:
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ReportedItemId">@localizer["goto"]</a>

        </dd>
    </dl>
</div>
<div>
    @*@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    *@
    <form method="get" asp-area="Identity" asp-page="/Account/CreateBan" asp-route-rid="@Model.ReportedUserId">
        <div asp-validation-summary="ModelOnly" method="post" class="create-form"></div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="@localizer["btnban"]" />
        </div>
    </form>
    <a asp-action="Index">@localizer["back"]s</a>
</div>
